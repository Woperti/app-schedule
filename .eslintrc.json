{
    "root": true,
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true,
        "modules": true
      }
    },
    "env": {
      "jest": true,
      "browser": true,
      "amd": true,
      "node": true
    },
    "plugins": ["react", "prettier"],
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "prettier"
    ],
    "rules":{
      "prefer-const": 1,
      "computed-property-spacing": 2,
      "space-comment": 1
    },
    "settings": {
      "react":{
        "version":"detect"
      }
    },
    "ignorePatterns": ["node_modules/", "napp/"]
  }